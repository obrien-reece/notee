{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<div class="text-center">
<span>This is a note taking application for {{ app.user.email }}</span>
</div>

{% if user_notes is empty %}
<br>
<br>

<div class="text-center"><span style="font-weight: 25"><button class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Create a note</button></span></div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
<h1 class="modal-title fs-5" id="exampleModalLabel">Add Note</h1>
<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form method="POST" action="{{ path('create_note') }}">
<div class="modal-body">
<div class='form-group'>
<label for="title">Title</label>
<input type="text" class="form-control" name="title">
</div>
<div class='form-group'>
<label for="note_description">Note Description</label>
<input type="text" class="form-control" name="note_description">
</div>
</div>
<div class="modal-footer">
<button type="submit" class="btn btn-success">Add Note</button>
</div>
</form>
</div>
</div>
</div>
{% else %}

<ol>

{% for note in user_notes %}

<li>{{ note.title }}</li>

{% endfor %}

</ol>

{% endif %}

</div>
{% endblock %}
